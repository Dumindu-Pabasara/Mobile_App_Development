<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CategoryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <!-- equal horizontal spacing between buttons -->
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>

        <!-- ✔️ optional fixed width so they line‑up nicely (remove if wrap_content preferred) -->
        <item name="android:layout_width">110dp</item>

        <!-- comfortable vertical padding -->
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>

        <!-- colours -->
        <item name="android:backgroundTint">@android:color/holo_blue_light</item>
        <item name="android:textColor">@android:color/white</item>

        <!-- text appearance -->
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
