<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgTrip"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/txtTripTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:text="Samanalawewa"
            android:textStyle="bold"
            android:textSize="14sp" />

        <!-- Horizontal layout for location and heart -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="6dp"
            android:paddingBottom="6dp"
            android:gravity="center_vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/txtTripLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Balangoda"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/imgHeart"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_weight="0.2"
                android:layout_gravity="end"
                android:src="@drawable/heart_outline"
                android:background="@drawable/heart_background"
                android:padding="4dp"
                android:contentDescription="Wishlist" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
